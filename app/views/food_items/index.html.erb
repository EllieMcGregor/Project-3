<h1>Home = Listing food items in your fridge</h1>


<%= search_form_for @q do |f| %>
  <div class="filter name">
    <%= f.text_field :name_or_ingredient_name_cont, placeholder: "Search for ingredients in fridge " %>
  </div>
    <p>
    <%= f.submit %>
  </p>
<% end %>

<div class="food-images"></div>
  <% @food_items.each do |food_item| %>
      <% if food_item.food_item_image.detail.url %>
          <p class="url-image"><%= link_to (food_item.food_item_image.detail.url), food_item.food_item_image.url %></p>
      <% else %>
           <p class="url-image"><img src="http://lorempixel.com/gray/400/200/food?v=<%= "#{food_item.id}" %>') no-repeat;backgrounsize:cover;"></p>
      <% end %>
  <% end %>
</div>
 

<br>

