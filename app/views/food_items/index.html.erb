<%= link_to 'Add Food Item', new_food_item_path %> 

<%= search_form_for @q do |f| %>
  <div class="filter name">
    <%= f.text_field :name_or_ingredient_name_cont, placeholder: "Search for ingredients in fridge " %>
  </div>
    <p>
    <%= f.submit %>
  </p>
<% end %>

<h1>Food Items that are in your fridge</h1>

<% @food_items.each do |food_item |%>
  <%= food_item.name %>
  <%= link_to "View recipes", recipes_path(q: {name_cont:food_item.name}) %>
<% end %>

<div class="cf">
  <div class="fridge">
    <div class="food-images"></div>
     <% @food_items.each do |food_item| %>
         <% if food_item.food_item_image.detail.url %>
             <%= link_to image_tag(food_item.food_item_image.detail.url, class: "url-image"), food_item_path(food_item)%>
         <% else %>
              <img class="url-image" src="http://lorempixel.com/200/100/food?v=<%= "#{food_item.id}" %>') no-repeat;backgroundsize:cover;">
         <% end %>
    <% end %>
  </div>

  <div class="recipe-index">
    <%#= render partial: "recipes/index" %>
  </div>
</div> 
