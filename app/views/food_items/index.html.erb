<h1>Your Fridge</h1>

<section id="fridge-section">
<%= search_form_for @q do |f| %>
  <div class="filter name">
    <%= f.text_field :name_or_ingredient_name_cont, placeholder: "Search for ingredients in fridge " %>
  </div>
    <p>
    <%= f.submit %>
  </p>
<% end %>

<div class="food-images"></div>
  <% @food_items.each do |food_item| %>
      <% if food_item.food_item_image.detail.url %>
          <p class="url-image"><%= link_to (food_item.food_item_image.detail.url), food_item_path(food_item)%></p>
      <% else %>
           <p class="url-image"><%= link_to food_item.food_item_image, food_item_path(food_item) %><img src="http://lorempixel.com/gray/400/200/food?v=<%= "#{food_item.id}" %>') no-repeat;backgroundsize:cover;"></p>
      <% end %>
  <% end %>
</section>

<br>

<%= link_to 'New Food item', new_food_item_path %> |
<%= link_to 'Back', food_items_path %>