<h1>Home = Listing food items in your fridge</h1>


<%= search_form_for @q do |f| %>
  <div class="filter name">
    <%= f.text_field :name_or_ingredient_name_cont, placeholder: "Search for ingredients in fridge " %>
  </div>
    <p>
    <%= f.submit %>
  </p>
<% end %>

  <tbody>
    <% @food_items.each do |food_item| %>
      <tr>
          <% if food_item.food_item_image.detail.url %>
               <p class="url-image"><%= link_to image_tag(food_item.food_item_image.detail.url), food_item.food_item_image.url %></p>
             <% else %>
               <p><img src="http://lorempixel.com/gray/400/200/food?v=<%= "#{food_item.id}" %>') no-repeat;background-size:cover;"></p>
           <% end %>

      </tr>
    <% end %>
  </tbody>

<br>

<%= link_to 'New Food item', new_food_item_path %> |
<%= link_to 'Back', food_items_path %>