<h1>Home = Listing food_items</h1>

<%= search_form_for @q do |f| %>
  <p>
    <%= f.label :name_cont %>
    <%= f.text_field :name_cont %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Expiry date</th>
      <th>Food item image</th>
      <th>User</th>
      <th>Ingredient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_items.each do |food_item| %>
      <tr>
        <td><%= food_item.name %></td>
        <td><%= food_item.expiry_date %> days </td>
        <td><%= food_item.food_item_image %></td>
        <td><%= food_item.user_id %></td>
        <td><%= food_item.ingredient_id %></td>
        <td><%= link_to 'Show', food_item %></td>
        <td><%= link_to 'Edit', edit_food_item_path(food_item) %></td>
        <td><%= link_to 'Destroy', food_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

