<table class="table">
  <thead>
    <tr class="center">
      <th colspan="2" class="th">Favourite Recipes</th>
    </tr>
  </thead>

  <tbody>
    <% @favourites.each do |favourite| %>
      <tr>
        <td><%= link_to favourite.try(:recipe).try(:name), favourite %></td>
        <td class="remove"><%= link_to 'Remove', favourite, method: :delete, data: { confirm: "#{current_user.first_name}" " why dont you love me anymore? Fine. Delete me" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

