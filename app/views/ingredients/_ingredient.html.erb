<tr>
  <td><%= ingredient.name %>,</td>
  <td><%= ingredient.unit %>,</td>
  <td>Calories:<%= ingredient.nutrition.try :calorie %></td>
  <td><%= link_to 'Show', ingredient %></td>
  <td><%= link_to 'Edit', edit_ingredient_path(ingredient) if can? :edit, Ingredient %></td>
  <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' }  if can? :destroy, Ingredient %></td>
</tr>
